<section id="species-select" class="card card--species">
  <div class="card__prompt">
    <div>Choose your species</div>
    <div>
      <a class="card__back btn btn--small"
         href="#"
         previous="card--name">
        <span class="btn__prompt">&lt;</span>
        <span class="btn__text">Back</span>
      </a>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-4">
        <div class="card__button" cardType="species">
          <a class="class__link btn btn--big btn--blue" href="#">
            <span class="btn__prompt">></span>
            <span class="btn__text">Human</span>
          </a>
        </div>

        <div class="card__button" cardType="species">
          <a class="class__link btn btn--big btn--blue" href="#">
            <span class="btn__prompt">></span>
            <span class="btn__text">Fairy</span>
          </a>
        </div>

        <div class="card__button" cardType="species">
          <a class="class__link btn btn--big btn--blue" href="#">
            <span class="btn__prompt">></span>
            <span class="btn__text">Elf</span>
          </a>
        </div>

        <div class="card__button" cardType="species">
          <a class="class__link btn btn--big btn--blue" href="#">
            <span class="btn__prompt">></span>
            <span class="btn__text">Orc</span>
          </a>
        </div>

        <div class="card__button" cardType="species">
          <a class="class__link btn btn--big btn--blue" href="#">
            <span class="btn__prompt">></span>
            <span class="btn__text">Troll</span>
          </a>
        </div>


        <div class="card__button" cardType="species">
          <a class="class__link btn btn--big btn--yellow" href="#">
            <span class="btn__prompt">></span>
            <span class="btn__text">Surprise Me</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="card__button">
    <a class="card__link btn btn--big btn--orange"
       href="#"
       next="card--path">
      <span class="btn__prompt">></span>
      <span class="btn__text">Select Path</span>
    </a>
  </div>
</section>