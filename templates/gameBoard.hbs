{{!-- player stats --}}
<div id="playerStats">
	<p>Name: {{players.0.playerName}}</p>
	<p>Species: {{players.0.species}}</p>
	<p>Path: {{players.0.path.name}}</p>
	<p>Health: {{players.0.health}}</p>
	<p>Spell: {{players.0.spell.name}}</p>
</div>
<div id="compStats">
	<p>Name: {{players.1.playerName}}</p>
	<p>Species: {{players.1.species}}</p>
	<p>Path: {{players.1.path.name}}</p>
	<p>Health: {{players.1.health}}</p>
	<p>Spell: {{players.1.spell.name}}</p>
</div>

{{!-- player attack notifications --}}
<div id="playerCommand">
	<p>{{players.0.playerName}} attacked with spell {{players.0.spell.name}}</p>
	<button id="attackButton">Attack!</button>
	<img id="playerImg" src={{players.0.avatar}}/>
</div>
<div id="compCommand">
	<p>{{players.1.playerName}} attacked with spell {{players.1.spell.name}}</p>
	<img id="compImg" src={{players.1.avatar}}/>
</div>

